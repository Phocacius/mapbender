{% extends "MapbenderManagerBundle:Repository:instance.html.twig" %}

{% block form_layers %}
    <table id="instanceTable" class="table table-outlined table-condensed instanceTable">
      <thead>
      {% set _proto = form.layers.vars.prototype %}
        <tr>
          <th></th>
          <th>{{ form.title.vars.label | trans}}</th>
          <th class="checkboxColumn">{{"mb.wms.wmsloader.repo.instance.label.active"|trans}}</th>
          <th colspan="2" class="{{- ['checkboxColumn', _proto.allowselected.vars.columnClass | default(''), _proto.selected.vars.columnClass | default('')] | join(' ') -}}">{{"mb.wms.wmsloader.repo.instance.label.select"|trans}}</th>
          <th class="checkboxColumn" colspan="2">{{"mb.wms.wmsloader.repo.instance.label.info"|trans}}</th>
          <th></th>
        </tr>
        <tr>
          <th colspan="3"></th>
          <th class="{{- ['checkboxColumn smallText', _proto.allowselected.vars.columnClass | default('')] | join(' ') -}}">{{"mb.wms.wmsloader.repo.instance.label.allow"|trans}}</th>
          <th class="{{- ['checkboxColumn smallText', _proto.selected.vars.columnClass | default('')] | join(' ') -}}">{{"mb.wms.wmsloader.repo.instance.label.on"|trans}}</th>
          <th class="{{- ['checkboxColumn smallText', _proto.allowinfo.vars.columnClass | default('')] | join(' ') -}}">{{"mb.wms.wmsloader.repo.instance.label.allow"|trans}}</th>
          <th class="{{- ['checkboxColumn smallText', _proto.info.vars.columnClass | default('')] | join(' ') -}}">{{"mb.wms.wmsloader.repo.instance.label.on"|trans}}</th>
          <th></th>
        </tr>
        <tr>
          <th colspan="2"></th>
          {{ form_row(_proto.active, {'tagName': 'th'}) }}
          {{ form_row(_proto.allowselected, {'tagName': 'th'}) }}
          {{ form_row(_proto.selected, {'tagName': 'th'}) }}
          {{ form_row(_proto.allowinfo, {'tagName': 'th'}) }}
          {{ form_row(_proto.info, {'tagName': 'th'}) }}
          <th></th>
        </tr>
      </thead>
      <tbody>
        {% for form in form.layers %}
        {% include "MapbenderWmtsBundle:Repository:instance-layer-form.html.twig"  with {'form': form }%}
        {% endfor %}
        <tr class="dummy">
          <td colspan="20"></td>
        </tr>
      </tbody>
    </table>
{% endblock %}
